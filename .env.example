# GirlBot Environment Configuration
# Copy this file to .env and fill in your values
# Run 'girlbot init' for interactive setup

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# Telegram Bot Token (REQUIRED)
# Get from @BotFather on Telegram: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# OpenAI API Key (REQUIRED for AI Stylist)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key

# ============================================
# FEATURE TOGGLES
# ============================================
# Enable/disable features individually
# Set to true/false

# AI Stylist: Color analysis, outfit feedback, wardrobe (default: true)
ENABLE_STYLIST=true

# Fitness Discovery: Find gyms, studios nearby (default: false)
# Requires: GOOGLE_PLACES_API_KEY
ENABLE_FITNESS=false

# Travel Planning: Flights, hotels, trips (default: false)
# Requires: AMADEUS_CLIENT_ID, AMADEUS_CLIENT_SECRET
ENABLE_TRAVEL=false

# ============================================
# FEATURE: FITNESS DISCOVERY
# ============================================
# Only required if ENABLE_FITNESS=true

# Google Places API Key
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your_google_places_key

# ============================================
# FEATURE: TRAVEL PLANNING
# ============================================
# Only required if ENABLE_TRAVEL=true

# Amadeus API (Flight Search)
# Get from: https://developers.amadeus.com/
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_ENVIRONMENT=test  # test or production

# Hotelbeds API (Hotel Search) - Optional
# Get from: https://developer.hotelbeds.com/
HOTELBEDS_API_KEY=your_hotelbeds_key
HOTELBEDS_SECRET=your_hotelbeds_secret

# ============================================
# OPTIONAL: ALTERNATIVE LLM
# ============================================

# Anthropic API Key (for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# ============================================
# CACHE & STORAGE
# ============================================

# Redis URL (for session storage)
# Leave empty or use localhost for development
# For production: use Upstash, Railway, or self-hosted Redis
REDIS_URL=redis://localhost:6379

# Use in-memory cache instead of Redis
# Set to true for single-user deployments (data lost on restart)
USE_MEMORY_CACHE=false

# ============================================
# DATABASE (OPTIONAL)
# ============================================
# Only needed for persistent user data beyond sessions

# Supabase
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Direct PostgreSQL (for migrations)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ============================================
# MONITORING (OPTIONAL)
# ============================================

# LangSmith (for LLM tracing and debugging)
# Get from: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_key
LANGSMITH_PROJECT=girlbot
LANGCHAIN_TRACING_V2=false

# ============================================
# APPLICATION
# ============================================

# Environment: development, staging, production
ENVIRONMENT=development

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Debug mode (verbose logging)
DEBUG=true

# ============================================
# RESILIENCE (ADVANCED)
# ============================================
# Tune circuit breakers and retries

# Number of failures before circuit opens
RESILIENCE_CIRCUIT_FAIL_MAX=5

# Seconds before circuit attempts to close
RESILIENCE_CIRCUIT_RESET_TIMEOUT=30

# Number of retry attempts for failed API calls
RESILIENCE_RETRY_ATTEMPTS=3

# Rate limits
RESILIENCE_OPENAI_RATE_LIMIT=50  # requests per minute
RESILIENCE_PLACES_RATE_LIMIT=10  # requests per second

# ============================================
# OPTIONAL: TELEGRAM PAYMENTS
# ============================================

# Stripe provider token for Telegram Payments
TELEGRAM_PAYMENT_PROVIDER_TOKEN=your_stripe_token

# ============================================
# OPTIONAL: MINDBODY (Fitness Booking)
# ============================================

# Mindbody API
# Get from: https://developers.mindbodyonline.com/
MINDBODY_API_KEY=your_mindbody_api_key
MINDBODY_SITE_ID=-99  # -99 is sandbox
