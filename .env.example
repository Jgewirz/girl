# GirlBot Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# TELEGRAM
# ============================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# For Telegram Payments (Stripe provider token)
TELEGRAM_PAYMENT_PROVIDER_TOKEN=your_stripe_token

# ============================================
# LLM APIs
# ============================================
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key

# Anthropic - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# ============================================
# DATABASE (Supabase)
# ============================================
# Get from Supabase dashboard -> Settings -> API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Direct PostgreSQL connection (for migrations)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ============================================
# REDIS (Upstash or local)
# ============================================
# Upstash - https://console.upstash.com/
REDIS_URL=redis://default:your_password@your-redis.upstash.io:6379

# ============================================
# MINDBODY API
# ============================================
# Get from https://developers.mindbodyonline.com
MINDBODY_API_KEY=your_mindbody_api_key
MINDBODY_SITE_ID=-99  # Use -99 for sandbox

# ============================================
# GOOGLE APIS
# ============================================
# Get from https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=your_google_places_key

# ============================================
# MONITORING (LangSmith)
# ============================================
# Get from https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_key
LANGSMITH_PROJECT=girlbot
LANGCHAIN_TRACING_V2=true

# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
